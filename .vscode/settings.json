    "editor.codeLensFontSize": 18,
    "editor.fontSize": 18,
    "editor.codeLensFontFamily": "18",
    "editor.inlayHints.fontFamily": "18",
    "window.zoomLevel": 0,
    "editor.mouseWheelZoom": true,
    "cSpell.words": [
        "speciality"
    ],
    "workbench.editor.enablePreview": false,
    "terminal.integrated.fontSize": 17,
